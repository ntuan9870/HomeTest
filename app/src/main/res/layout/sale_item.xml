<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/img_sale"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageView>
    <TextView
        android:id="@+id/txt_phan_tram_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="-10%"
        android:textSize="9sp"
        android:background="@drawable/background_phan_tram_sale">
    </TextView>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_gia_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_sale"
        android:layout_marginTop="5dp"
        android:text="8.900 vnd">
    </TextView>
    <ProgressBar
        android:layout_below="@id/txt_gia_sp"
        android:id="@+id/progress_bar_sale"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:progress="25"
        android:layout_centerHorizontal="true"
        android:max="100"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_da_ban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_gia_sp"
        android:layout_marginTop="0dp"
        android:textSize="9sp"
        android:text="Đã bán 10/50">
    </TextView>
</RelativeLayout>